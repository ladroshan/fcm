<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/floating_contextual_vertical_margin"
    android:paddingEnd="@dimen/floating_contextual_horizontal_margin"
    android:paddingRight="@dimen/floating_contextual_horizontal_margin"
    android:paddingStart="@dimen/floating_contextual_horizontal_margin"
    android:paddingTop="@dimen/floating_contextual_vertical_margin">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/activity_main_center_label"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/floating_contextual_vertical_margin"
                android:text="@string/activity_main_left_label"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/floating_contextual_vertical_margin"
                android:text="@string/activity_main_right_label"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

            <TextView
                android:id="@+id/tv_long"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/floating_contextual_vertical_margin"
                android:text="@string/long_text"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
